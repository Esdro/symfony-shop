{% extends 'base.html.twig' %}

{% block title %}Address
{% endblock %}

{% block body %}
	<div class="container">
		<div class='row'>
			<h1>Address</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ address.id }}</td>
					</tr>
					<tr>
						<th>Fullname</th>
						<td>{{ address.fullname }}</td>
					</tr>
					<tr>
						<th>Company</th>
						<td>{{ address.company }}</td>
					</tr>
					<tr>
						<th>Adress</th>
						<td>{{ address.adress }}</td>
					</tr>
					<tr>
						<th>Complement</th>
						<td>{{ address.complement }}</td>
					</tr>
					<tr>
						<th>City</th>
						<td>{{ address.city }}</td>
					</tr>
					<tr>
						<th>Phone</th>
						<td>{{ address.phone }}</td>
					</tr>
					<tr>
						<th>CodePostal</th>
						<td>{{ address.codePostal }}</td>
					</tr>
					<tr>
						<th>Country</th>
						<td>{{ address.country }}</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('app_address_index') }}" class="bg-dark p-2">back to list</a>

			<a href="{{ path('app_address_edit', {'id': address.id}) }}" class="bg-dark p-2">edit</a>

			{{ include('address/_delete_form.html.twig') }}

		</div>
	</div>
{% endblock %}
